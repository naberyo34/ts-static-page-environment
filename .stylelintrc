{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recess-order",
    "stylelint-config-prettier",
  ],
  "plugins": [
    "stylelint-scss",
    "stylelint-order",
    "stylelint-prettier",
  ],
  "rules": {
    "prettier/prettier": true,
    "no-invalid-position-at-import-rule": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "mixin",
          "use",
          "include",
          "function",
          "return",
        ]
      }
    ]
  }
}
